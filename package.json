  },
  "homepage": "https://github.com/SigmaTokens/SigmaTokens#readme",
  "devDependencies": {
    "concurrently": "^9.1.2",
    "prettier": "3.5.3"
  },
  "dependencies": {
    "chart.js": "^4.4.8",
    "cross-env": "^7.0.3",
    "react-chartjs-2": "^5.3.0",
    "uuid": "^11.1.0"
  }
}
